@model IEnumerable<CountryListItem>
@{
    ViewData["Title"] = "Countries";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Create" class="btn btn-primary btn-sm">Create</a>
            </th>
            <th>Name</th>
            <th>Abbreviation</th>
            <th>Enabled</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
            </td>
            <td>@item.Name</td>
            <td>@item.Abbreviation</td>
            <td>@Html.DisplayFor(x => item.Enabled)</td>
        </tr>
    }
    </tbody>
</table>
