@model CountryForm
@{
    ViewData["Title"] = "Create Country";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8 col-lg-6 col-xl-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abbreviation"></label>
                <input asp-for="Abbreviation" class="form-control col-md-2">
                <span asp-validation-for="Abbreviation" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" asp-for="Enabled" class="form-check-input">
                <label asp-for="Enabled" class="form-check-label"></label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="List" class="btn">Back to Countries</a>
            </div>
        </form>
    </div>
</div>
