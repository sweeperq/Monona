@model ReservationEditForm
@{
    ViewData["Title"] = "Edit Reservation";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8 col-lg-6 col-xl-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id">
            <span asp-validation-for="Id" class="text-danger"></span>
            <input type="hidden" asp-for="ProductId">
            <div class="form-group">
                <label asp-for="StoreId"></label>
                <input type="hidden" asp-for="StoreId">
                <span class="form-text">@Model.Store.Name</span>
                <span asp-validation-for="StoreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderId"></label>
                <input type="number" asp-for="OrderId" class="form-control">
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShipmentId"></label>
                <input type="number" asp-for="ShipmentId" class="form-control">
                <span asp-validation-for="ShipmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderItemId"></label>
                <input type="number" asp-for="OrderItemId" class="form-control">
                <span asp-validation-for="OrderItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderNumber"></label>
                <input asp-for="OrderNumber" class="form-control">
                <span asp-validation-for="OrderNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sku"></label>
                <input asp-for="Sku" class="form-control">
                <span asp-validation-for="Sku" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input type="number" asp-for="Quantity" class="form-control">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReservedOn"></label>
                <input type="datetime" asp-for="ReservedOn" class="form-control">
                <span asp-validation-for="ReservedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="List" class="btn">Back to Mappings</a>
            </div>
        </form>
    </div>
</div>
